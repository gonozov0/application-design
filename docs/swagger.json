                }
            }
        },
        "internal_application_orders_handlers.CreateRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "from": {
                    "type": "string"
                },
                "hotel_id": {
                    "type": "string"
                },
                "room_id": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                }
            }
        },
        "internal_application_orders_handlers.CreateResponse": {
            "type": "object",
